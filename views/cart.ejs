<!DOCTYPE html>
<html lang="en">
  <head>
    <title>my cart</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/base.css" type="text/css" />
    <link rel="stylesheet" href="/styles/cart.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/items-display.js"></script>
    <script type="text/javascript" src="/scripts/category.js"></script>
  </head>


<body>
  <%- include('partials/_header') %>
  <Div class="main container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Movie Name</th>
          <th scope="col">price</th>
          <th scope="col">Delete item</th>
        </tr>
      </thead>
      <tbody>
        <% for(let item of orders) { %>
          <tr>
            <td><%= item.movie %></td>
            <td><%= item.price %> $ </td>
            <td><form method="POST" action="#">
              <input name="id"  type="hidden" value="<%= item.id %>"">
            <button type='submit' class="btn btn-outline-danger"> Delete</button>
            </form>
          </td>
          </tr>
        <% } %>
        <tr>
          <td>Total</td>
          <td><%= total%> $</td>
          <td>
            <a href="/submit"><button type='submit' class="btn btn-outline-primary"> Place an order</button></a>
          </td>
        </tr>
      </tbody>
    </table>
  </Div>
</body> 
<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
