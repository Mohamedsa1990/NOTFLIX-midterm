<body>
  <nav>
    <span>It's Up to You</span>
  </nav>

<form action="/register" method="POST">
  <div class="container">
    <h1><strong>Sign Up</strong></h1>
    <hr>
    
    <label for="user-name"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" id="user-name" required>
    
    <label for="email"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="email" id="email" required>
    
    <label for="phone"><b>Phone</b></label>
    <input type="tel" placeholder="Enter Phone Number: 123-456-7890" name="phone" id="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
    
    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" id="password" required>

    <hr>
    <!-- class="registerbtn" -->
    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
    <div class="container-class">
      <p>Already have an account? <a href='/login'>Sign in</a>.</p>
    </div>
  </div>
</form>
<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
